<!doctype html>
<html lang="en">

<head>
  <title>Sola</title>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
  <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@300&display=swap" rel="stylesheet">
  <script src="https://kit.fontawesome.com/077191d827.js" crossorigin="anonymous"></script>
  <link rel="stylesheet" href="css/style.css">
</head>

<body>

  <div class="wrapper d-flex align-items-stretch">
    <nav id="sidebar" class="order-last" class="img" style="background-image: url(images/bg_1.jpg);">
      <div class="custom-menu">
        <button type="button" id="sidebarCollapse" class="btn btn-primary">
        </button>
      </div>
      <div class="">
        <h1><a href="index.html" class="logo"><i class="far fa-bell"></i> Sola</a></h1>
        <ul class="list-unstyled components mb-5">
          <li class="active">
            <a href="/attendance"><span class="fa fa-eye mr-3"></span> Attendance</a>
          </li>
          <li>
            <a href="/homework"><span class="fa fa-list mr-3"></span> Homework</a>
          </li>
          <li>
            <a href="/progress"><span class="fa fa-chart-bar mr-3"></span> Progress</a>
          </li>
          <li>
            <a href="/events"><span class="fa fa-calendar-alt mr-3"></span> Events</a>
          </li>
          <li>
            <a href="/messages"><span class="fa fa-envelope mr-3"></span> present</a>
          </li>
          <li>
            <a href="/logout"><span class="fa fa-sign-out-alt mr-3"></span> Sign Out</a>
          </li>
        </ul>


      </div>

    </nav>

    <!-- Page Content  -->
    <div id="content" class="p-4 p-md-5 pt-5">
      <section class="hero">
        <section class="displayInput">
          <% if (user.local.usertype === 'teacher') { %>
          <form id="listInput" action="/newatt" method="post">
            <input type="text" name="name" placeholder="Student Name" class="inputMain">
            <select type="text" name="day" class="inputMain">
              <option value="monday">Monday</option>
              <option value="tuesday">Tuesday</option>
              <option value="wednesday">Wednesday</option>
              <option value="thursday">Thursday</option>
              <option value="friday">Friday</option>
            </select>
            <select class="inputMain" name="status">
              <option value="present">Present</option>
              <option value="absent">Absent</option>
            </select>
              <button type="submit" name="button" id="button">Submit</button>
              <button type="submit" name="button" id="buttonClear">Clear</button>
          </form>
          <% } %>

        </section>
        <section class="shownList">
          <table>
            <thead>
              <tr>
                <th></th>
                <th name="monday"=>Monday</th>
                <th name="tuesday">Tuesday</th>
                <th name="wednesday">Wednesday</th>
                <th name="thursday">Thursday</th>
                <th name="friday">Friday</th>
              </tr>
            </thead>
            <tbody>
                <% for(var i=0; i<present.length; i++) {%>
                  <% if (present[i].day == 'monday') { %>
                <tr>
                  <td><%= present[i].name %></td>
                  <td><%= present[i].status %></td>
                </tr>
                <% } %>
              <% } %>
                <tr>
                  <% for(var i=0; i<present.length; i++) {%>
                    <% if (present[i].day == 'tuesday') { %>
                  <td><%= present[i].name %></td>
                  <td><%= present[i].status %></td>
                    <% } %>
                  <% } %>
                </tr>

            </tbody>
          </table>

        </section>


    </div>
  </div>

  <script src="js/jquery.copy.min.js"></script>
  <script src="js/popper.js"></script>
  <script src="js/bootstrap.min.js"></script>
  <script src="js/main.copy.js"></script>
  <script src="homework.js"></script>
</body>

</html>
